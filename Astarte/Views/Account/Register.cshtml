@model Astarte.ViewModels.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers





<!DOCTYPE html>
<html lang="en">
<head>
   <title>Astarte - Sign up</title>
</head>
<body>


    <div class="reg_popup__bg">

        <form class="reg_box" method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <a asp-controller="Home" asp-action="Index" class="reg_popup_close">X</a>
            <h1>Sign up</h1>

            <div>
                <input type="text" placeholder="Email" asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <input type="password" placeholder="Password" asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <input type="password" placeholder="Confirmation" asp-for="PasswordConfirm" />
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <div>
                <input type="submit" value="Submit" />
            </div>

        </form>
    </div>





</body>
</html>