

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <title>List</title>
</head>
<body>

    <h2>User Manager - Rights List</h2>
    <table class="table">
        @foreach (var role in Model)
        {
            <tr>
                <td class="role_name">@role.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>








    <form asp-action="Create">
        <button class="manage_button">New Right</button>
    </form>
    <form asp-action="UserList">
        <button class="manage_button">User List</button>
    </form>
    <form asp-controller="Tools" asp-action="Tool">
        <button class="manage_button">Back</button>
    </form>
</body>
</html>