

@using Microsoft.AspNetCore.Identity
@model Astarte.ViewModels.ChangeRoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
   <title>User Manager - Edit</title>
</head>
<body>

    <h2 class="change_title">Change rights for @Model.UserEmail</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <div class="form-group">
            @foreach (IdentityRole role in Model.AllRoles)
            {
                <input type="checkbox" name="roles" value="@role.Name"
                       @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
                }
        </div>
        <button type="submit" class="btn_edit btn-primary">Save</button>
    </form>
</body>
</html>