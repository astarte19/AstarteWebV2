

@model IEnumerable<Astarte.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
   <title>User List</title>
</head>
<body>

    <h2>User Manager - User List</h2>
    <table class="table">
        @foreach (var user in Model)
        {
            <tr>
                <td class="user_emails">@user.Email</td>
                <td>



                    <a class="btn_edit btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Rights</a>
                </td>
            </tr>
        }
    </table>
    <form asp-controller="Roles" asp-action="Role">
        <button class="manage_button">Back</button>
    </form>
</body>
</html>