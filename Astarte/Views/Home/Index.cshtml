@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

   <title>Astarte - Home</title>

    <!--Inter UI font-->
    <link href="https://rsms.me/inter/inter-ui.css" rel="stylesheet" asp-append-version="true">
    <!--Swiper slider-->
    <link rel="stylesheet"
          href="~/css/swiper_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slider_style.css" asp-append-version="true">
    <!--vendors styles-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.css" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick-theme.min.css" asp-append-version="true">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css" asp-append-version="true">
    <!--  <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css" asp-append-version="true">
      <!-- Bootstrap CSS / Color Scheme -->
    <link rel="stylesheet" href="~/css/default.css" id="theme-color" asp-append-version="true">
    <!--Popup modal login-->
  


</head>
<body>

    <!--navigation-->
    <section class="smart-scroll">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-dark">
                <a class="navbar-brand heading-black page-scroll" href="#home">
                    Astarte
                </a>
                <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
                        data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span data-feather="grid"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#pricing">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#features">Projects</a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link page-scroll" href="#blog">Socials</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" id="auth" asp-controller="Tools" asp-action="Tool">Apps</a>
                            </li>
                            <li class="nav-item">
                                <p class="nav-link d-flex flex-row align-items-center text-primary ">
                                    @User.Identity.Name
                                </p>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Account" asp-action="Logout">
                                    <button class="btn btn-primary d-inline-flex flex-row align-items-center" type="submit">
                                        <i class="fa fa-sign-out" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </li>

                        }
                        else
                        {

                            <li class="nav-item">
                                <a class="nav-link d-flex flex-row align-items-center text-primary" asp-controller="Account" asp-action="Login">
                                    <em data-feather="layout" width="18" height="18" class="mr-2"></em>
                                    Log in
                                </a>
                            </li>

                        }

                    </ul>
                </div>
            </nav>
        </div>
    </section>

    <!--hero header-->
    <section class="py-7 py-md-0 bg-hero" id="home">
        <div class="container">
            <div class="row vh-md-100">
                <div class="col-md-8 col-sm-10 col-12 mx-auto my-auto text-center">
                    <h1 class="heading-black text-capitalize">Hi!</h1>
                    <p class="lead py-3">I'm Artem - .NET Software Developer</p>

                </div>
            </div>
        </div>
    </section>
    <!--Skills section-->
    <section class="py-7 bg-dark section-angle top-right bottom-right" id="pricing">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto text-center">
                    <h2 class="text-white heading-black">Hard Skills</h2>

                </div>
            </div>
            <!--Hard skills tables-->
            <div class="row pt-5 pricing-table">
                <div class="col-12 mx-auto">
                    <div class="card-deck pricing-table">
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title pt-3">Front-end</h3>
                                <h2 class="card-title text-primary mb-0 pt-4">
                                    <i class="fa fa-code" aria-hidden="true"></i>
                                </h2>
                                <div class="text-muted font-weight-medium mt-2">=====</div>
                                <ul class="list-unstyled pricing-list">
                                    <li>HTML5</li>
                                    <li>CSS3</li>
                                    <li>JavaScript</li>
                                    <li>ES6</li>
                                </ul>

                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title pt-3">Back-end</h3>
                                <h2 class="card-title text-primary mb-0 pt-4">
                                    <i class="fa fa-cogs" aria-hidden="true"></i>
                                </h2>
                                <div class="text-muted font-weight-medium mt-2">=====</div>
                                <ul class="list-unstyled pricing-list">
                                    <li>C#</li>
                                    <li>.NET Core</li>
                                    <li>ASP.NET Core MVC</li>
                                    <li>WPF & WinForms</li>
                                    <li>MS SQL SERVER</li>
                                </ul>

                            </div>
                        </div>
                        <div class="card">
                            <div class="card-body">
                                <h3 class="card-title pt-3">Dev-ops</h3>
                                <h2 class="card-title text-primary mb-0 pt-4"><i class="fa fa-archive" aria-hidden="true"></i></h2>
                                <div class="text-muted font-weight-medium mt-2">=====</div>
                                <ul class="list-unstyled pricing-list">
                                    <li></li>
                                    <li>Docker</li>
                                    <li>Kubernetes</li>
                                    <li>Git</li>
                                </ul>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-6">
                <div class="col-md-4 mr-auto">
                    <h3>Soft skills</h3>
                    <p class="lead">
                        I made these conclusions based on my subjective assessment and the assessment of people around me, friends and colleagues
                    </p>
                </div>
                <div class="col-md-7 offset-md-1">
                    <ul class="features-list">
                        <li>Hardworking</li>
                        <li>Purposeful</li>
                        <li>Quick study</li>
                        <li>Creative</li>
                        <li>Perfectionist</li>
                        <li>Responsible</li>
                        <li>Friendly</li>
                    </ul>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-8 col-12 divider top-divider mx-auto pt-5 text-center">

                </div>
            </div>
        </div>
    </section>

    <!-- Projects section -->
    <section class="pt-6 pb-7" id="features">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto text-center">
                    <h2 class="heading-black">Pet Projects</h2>
                    <p class="text-muted lead">Open source projects. I continue to write new projects and supplement this gallery with them</p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-10 mx-auto">
                    <!---->
                    <!-- Slider main container -->
                    <!-- Slider main container -->
                    <div class="swiper">
                        <!-- Additional required wrapper -->
                        <div class="swiper-wrapper">
                            <!-- Slides -->
                            <div class="swiper-slide">
                                <div class="content_container">
                                    <!--Text content-->
                                    <div class="slide_text">
                                        <h2 class="heading-black">Text Converter</h2>
                                        <p class="text-muted lead">(C#, Windows Forms)</p>
                                        <p class="lead">
                                            An application that allows you to convert the extensions of text files between each other
                                        </p>

                                    </div>
                                    <!--Img-->
                                    <div class="project_image">
                                        <img src="~/img/TextConverter.png">
                                    </div>

                                </div>


                            </div>
                            <div class="swiper-slide">
                                <div class="content_container">
                                    <!--Text content-->
                                    <div class="slide_text">
                                        <h2 class="heading-black">Wallpaper Set</h2>
                                        <p class="text-muted lead">(C#, WPF)</p>
                                        <p class="lead">
                                            An application that sets 4k wallpapers of different categories
                                        </p>

                                    </div>
                                    <!--Img-->
                                    <div class="project_image">
                                        <img src="~/img/WallpaperSet.png">
                                    </div>

                                </div>
                            </div>
                            <div class="swiper-slide">
                                <div class="content_container">
                                    <!--Text content-->
                                    <div class="slide_text">
                                        <h2 class="heading-black">Diary</h2>
                                        <p class="text-muted lead">(C#, Xamarin.Forms)</p>
                                        <p class="lead">
                                            Simple ToDo CRUD application for IOS and Android
                                        </p>

                                    </div>
                                    <!--Img-->
                                    <div class="project_image">
                                        <img src="~/img/TodoApp.png">
                                    </div>

                                </div>
                            </div>

                        </div>
                        <!-- If we need pagination -->
                        <div class="swiper-pagination"></div>

                        <!-- If we need navigation buttons -->
                        <div class="swiper-button-prev"></div>
                        <div class="swiper-button-next"></div>

                        <!-- If we need scrollbar -->
                        <div class="swiper-scrollbar"></div>
                    </div>

                </div>
            </div>

            <div class="row mt-6">
                <div class="col-md-6 mx-auto text-center">


                    <a class="github_link" href="https://github.com/astarte19" target="_ blank">
                        <p class="lead">
                            Check on GitHub
                        </p>
                    </a>


                    <div class="col-md-8 col-12 divider top-divider mx-auto pt-5 text-center">

                    </div>
                </div>
            </div>
        </div>
    </section>




    <!--Socials section-->
    <section class="py-7 bg-dark section-angle top-left bottom-left" id="blog">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mx-auto text-center">
                    <h2 class="heading-black">Social networks</h2>
                    <p class="">Contact me via links below</p>
                </div>
            </div>
            <div class="row mt-5">
                <div class="col-md-4">
                    <div class="card">
                        <a href="https://github.com/astarte19" target="_ blank">
                            <img class="card-img-top img-raised" src="~/img/Socials_github.png" alt="Blog 1">
                        </a>
                        <div class="card-body">
                            <a href="https://github.com/astarte19" target="_ blank" class="card-title mb-2"><h5>GitHub</h5></a>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <a href="https://www.instagram.com/switerrr1337/" target="_blank">
                            <img class="card-img-top img-raised" src="~/img/Socials_instagram.png" alt="Blog 2">
                        </a>
                        <div class="card-body">
                            <a target="_blank" href="https://www.instagram.com/switerrr1337/" class="card-title mb-2"><h5>Instagram</h5></a>

                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <a href="https://t.me/playingdevil" target="_blank">
                            <img class="card-img-top img-raised" src="~/img/Socials_telegram.png" alt="Blog 3">
                        </a>
                        <div class="card-body">
                            <a target="_blank" href="https://t.me/playingdevil" class="card-title mb-2"><h5>Telegram</h5></a>

                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-6">
                <div class="col-md-6 mx-auto text-center">
                    <div class="col-md-8 col-12 divider top-divider mx-auto pt-5 text-center">

                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--footer-->
    <footer class="py-6">
        <div class="container">
            <div class="row">
                <div class="col-sm-5 mr-auto">


                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">

                </div>
                <div class="col-sm-2">

                </div>
            </div>
            <div class="row mt-5">
                <div class="col-12 text-muted text-center small-xl">
                    &copy; 2022 Astarte - All Rights Reserved
                </div>
            </div>
        </div>
    </footer>

    <!--scroll to top-->
    <div class="scroll-top">
        <i class="fa fa-angle-up" aria-hidden="true"></i>
    </div>

    <!-- theme switcher -->
    <div class="switcher-wrap">
        <div class="switcher-trigger">
            <span class="fa fa-gear"></span>
        </div>
        <div class="color-switcher">
            <h6>Theme switcher</h6>
            <ul class="mt-3 clearfix">
                <li class="bg-teal active" data-color="default" title="Default Teal"></li>
                <li class="bg-purple" data-color="purple" title="Purple"></li>
                <li class="bg-blue" data-color="blue" title="Blue"></li>
                <li class="bg-red" data-color="red" title="Red"></li>
                <li class="bg-green" data-color="green" title="Green"></li>

                <li class="bg-orange" data-color="orange" title="Orange"></li>



            </ul>
            <p>You can easily select color scheme</p>
        </div>
    </div>

    

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.7.3/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.8.1/slick.min.js"></script>
    <script src="~/js/scripts.js"></script>
    <!--Swiper js-->
    <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>
    <script src="~/js/swiper_slider.js"></script>
    <!--Popup sig in-->
   
</body>
</html>