
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Astarte - Translat0r</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/css/translator_style.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://rsms.me/inter/inter-ui.css" rel="stylesheet">

</head>
<body>
    <div class="exit_title">

        <a asp-controller="Tools" asp-action="Tool" class="exit_icon"><i class="fa fa-chevron-circle-left exit_btn" aria-hidden="true"></i></a>
        <div class="main_title"><p>Translat0r</p></div>

    </div>

    <div class="wrapper">
        <div class="blue-bg"></div>
        <div class="white-bg"></div>

        <div class="converter-wrapper">

            <!-- converter inputs -->
            <div class="converter-inputs">
                <div class="from-currency">
                    <label for="">From</label>
                    <select>
                        <!-- <option>USD</option> -->
                    </select>
                </div>
                <div class="to-currency">
                    <label for="">To</label>
                    <select>
                        <!-- <option>USD</option> -->
                    </select>
                </div>
                <div class="from-amount">
                    <label for="">Text</label>

                    <textarea class="form-control" id="text_input" placeholder="Input your text here"></textarea>
                </div>



                <div class="result-wrapper">
                    <label for="">Result</label>


                    <textarea class="form-control" id="to-result" placeholder="Result"></textarea>

                </div>
            </div>

            <!-- converted result -->

            <button type="button" id="convert-btn">Translate</button>
        </div>
    </div>


</body>
</html>

